{
  "manifest_version": 3,
  "name": "Text Scrap with Sidebar",
  "version": "1.0",
  "description": "Select text to show it in a sidebar.",
  "permissions": [
    "scripting",
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html",
        "bootstrap.min.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "css": [
        "bootstrap.min.css",
        "styles.css"
      ]
    }
  ]
}